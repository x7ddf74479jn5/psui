{
  "name": "psui",
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "x7ddf74479jn5",
    "url": "https://github.com/x7ddf74479jn5"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "preview": "turbo run preview",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format:check": "turbo run format:check",
    "format:write": "turbo run format:write",
    "typecheck": "turbo run typecheck",
    "check": "turbo lint typecheck format:check",
    "prepare": "husky install",
    "prebuild": "turbo run prebuild --filter=@psui/components",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "build:release": "turbo run build --filter=playground^..."
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.1",
    "@psui/eslint-config-psui": "workspace:*",
    "eslint": "^8.41.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "turbo": "^1.9.8"
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/ui/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
